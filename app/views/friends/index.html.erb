<% if user_signed_in? %>

  <h1>Friends List</h1>

  <table class='table table-striped table-dark table-bordered table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @friends.each do |friend| %>
        <tr>
          <% if friend.user == current_user %>
            <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= link_to "Delete", friend, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:"btn btn-dark" %>

<% else %>
  <h1>Home#index</h1>
  <h2>Hello dude!</h2>
  <%= link_to 'Sign Up', new_user_registration_path, class:'btn btn-dark' %>
<% end %>